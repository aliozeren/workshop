<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="processEngineConfiguration"
		class="org.activiti.engine.impl.cfg.StandaloneProcessEngineConfiguration">

		<property name="jdbcUrl" value="jdbc:postgresql://localhost:5432/activiti" />
		<property name="jdbcUsername" value="activiti" />
		<property name="jdbcPassword" value="activiti" />
		<property name="jdbcDriver" value="org.postgresql.Driver" />
		<property name="databaseSchemaUpdate" value="true" />
		<property name="jobExecutorActivate" value="false" />
		<property name="mailServerHost" value="ali.ozeren@gmail.com" />
		<property name="mailServerPort" value="5025" />

		<property name="formTypes">
			<bean class="tr.gov.tuik.activitilib.zk.CustomFormTypes" />
		</property>

		<property name="customFormTypes">
			<list>
				<bean class="org.activiti.engine.impl.form.StringFormType" />
				<bean class="org.activiti.engine.impl.form.LongFormType" />
				<bean class="org.activiti.engine.impl.form.DateFormType">
					<constructor-arg value="dd/MM/yyyy" />
				</bean>
				<bean class="org.activiti.engine.impl.form.BooleanFormType" />
			</list>
		</property>
	</bean>

</beans>